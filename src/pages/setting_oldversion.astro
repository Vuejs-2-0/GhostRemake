import ProfileSetting from "../components/ProfileSetting.vue";
import "../styles/globals.css";

const props = Astro.props

const { tx } = Astro.locals as any;
---

<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
