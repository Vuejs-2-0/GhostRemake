---
import Layout from "@/layouts/Layout.astro";
import '../styles/globals.css'
import HistoryList from '../components/HistoryList.vue';
const props = Astro.props

const { tx } = Astro.locals as any;
---

<Layout title="帐户设置">

  <main class="w-full h-full overflow-y-auto relative">
      <section class="w-full flex flex-col justify-center items-center">
          <HistoryList client:only="vue" class="mt-8" />
      </section>
  </main>

</Layout>

<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>购买记录</title>
</head>

<body>
  <div class="items-center flex-col mb-16">

    <div class="flex justify-start p-4 text-lg border-b mb-8">
      
        <a href="/" class="flex items-center">
          <button class="menu-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 16 16" {...props}>
              <path fill="currentColor" d="m6.293 13.707l-5-5a.999.999 0 0 1 0-1.414l5-5a.999.999 0 1 1 1.414 1.414L4.414 7H14a1 1 0 0 1 0 2H4.414l3.293 3.293a.997.997 0 0 1 0 1.414a.999.999 0 0 1-1.414 0" />
            </svg>
          </button>
        </a>

        <p class="ml-4 font-semibold">购买记录</p>
    </div>
    
    <HistoryList client:only="vue" />
  </div>
</body>
</html> 