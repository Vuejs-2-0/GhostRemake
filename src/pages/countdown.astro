    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      body {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #fef7f0;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        overflow: hidden;
      }
      
      .countdown {
        text-align: center;
      }
      
      .title {
        font-size: 2rem;
        color: #d97706;
        margin-bottom: 1rem;
        font-weight: 600;
      }
      
      .target {
        font-size: 1rem;
        color: #92400e;
        margin-bottom: 2rem;
      }
      
      .timer {
        display: flex;
        gap: 1rem;
        justify-content: center;
      }
      
      .unit {
        background: white;
        padding: 1rem;
        border-radius: 0.5rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        min-width: 80px;
      }
      
      .number {
        font-size: 2.5rem;
        font-weight: bold;
        color: #d97706;
        line-height: 1;
      }
      
      .label {
        font-size: 0.875rem;
        color: #92400e;
        margin-top: 0.5rem;
      }
      
      .finished {
        font-size: 1.5rem;
        color: #d97706;
        margin-top: 2rem;
        display: none;
      }
    </style>
  </head>
  <body>
    <div class="countdown">
      
      <div class="timer">
        <div class="unit">
          <div id="days" class="number">0</div>
          <div class="label">天</div>
        </div>
        <div class="unit">
          <div id="hours" class="number">00</div>
          <div class="label">时</div>
        </div>
        <div class="unit">
          <div id="minutes" class="number">00</div>
          <div class="label">分</div>
        </div>
        <div class="unit">
          <div id="seconds" class="number">00</div>
          <div class="label">秒</div>
        </div>
      </div>
      
      <div id="finished" class="finished">时间到了！</div>
    </div>

    <script>
      // Target UNIX epoch in seconds
      const targetEpochSeconds = 1755881700;
      const target = targetEpochSeconds * 1000;
      
      function updateCountdown() {
        const now = Date.now();
        let distance = target - now;
        
        if (distance <= 0) {
          distance = 0;
          const finishedEl = document.getElementById('finished');
          if (finishedEl) finishedEl.style.display = 'block';
          clearInterval(timer);
          // Redirect to index when countdown finishes
          window.location.replace('/');
          return;
        }
        
        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);
        
        const daysEl = document.getElementById('days');
        const hoursEl = document.getElementById('hours');
        const minutesEl = document.getElementById('minutes');
        const secondsEl = document.getElementById('seconds');
        
        if (daysEl) daysEl.textContent = String(days);
        if (hoursEl) hoursEl.textContent = String(hours).padStart(2, '0');
        if (minutesEl) minutesEl.textContent = String(minutes).padStart(2, '0');
        if (secondsEl) secondsEl.textContent = String(seconds).padStart(2, '0');
      }
      
      updateCountdown();
      const timer = setInterval(updateCountdown, 1000);
    </script>
  </body>
</html>


